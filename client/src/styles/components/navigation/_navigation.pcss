.main-nav {
	margin: 15px 0;

	.main-nav-list {
		list-style: none;
		display: flex;
		align-items: center;
	}

	.main-nav-list-item-link {
		font-size: $font-slight;
		padding: 15px 30px;
		font-weight: 700;
		display: block;

		&.active {
			border-bottom: 2px solid $yellow;

			&::first-letter {
				color: $yellow;
			}
		}
	}
}
