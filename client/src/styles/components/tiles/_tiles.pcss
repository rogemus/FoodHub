.tiles {
	display: grid;
	grid-gap: 45px 25px;

	.card {
		width: 100%;
		margin: 0;

		&:nth-child(1),
		&:nth-child(6) {
			grid-column: 1 / span 3;
		}

		&:nth-child(2),
		&:nth-child(7) {
			grid-column: 4 / span 3;
		}

		&:nth-child(3) {
			grid-column: 1 / span 2;
		}

		&:nth-child(4) {
			grid-column: 3 / span 2;
		}

		&:nth-child(5) {
			grid-column: 5 / span 2;
		}
	}
}
